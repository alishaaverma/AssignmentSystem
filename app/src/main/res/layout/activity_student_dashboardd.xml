<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentDashboardd"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@drawable/dashboard_grad">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="ASSIGNMENT SYSTEM"
                    android:textColor="@color/mycolor3"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:shadowColor="@color/white"
                    android:shadowRadius="10"
                    android:shadowDy="10"
                    android:shadowDx="5"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="...Welcome to Our Application..."
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:textSize="25dp"
                    android:gravity="right"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="STYUDENT DASHBOARD"
                    android:textColor="@color/mycolor3"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_margin="20dp"
                    android:shadowColor="@color/white"
                    android:shadowRadius="10"
                    android:shadowDy="10"
                    android:shadowDx="5"></TextView>
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="-80dp">
                <androidx.cardview.widget.CardView
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:padding="40dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/grad">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_baseline_dashboard_24"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/dark"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DASHBOARD"
                            android:textSize="15dp"
                            android:textColor="@color/mycolor3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:padding="40dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/grad">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_baseline_person_24"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/red"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PROFILE"
                            android:textColor="@color/mycolor3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:padding="40dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/grad">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_baseline_phone_24"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/success"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SUPPORTIVE CALL"
                            android:textColor="@color/mycolor3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:padding="40dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/grad">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_baseline_book_24"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/mycolor4"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="STUDENT RESULT"
                            android:textColor="@color/mycolor3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:padding="40dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/grad">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_baseline_lock_24"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/l2"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CHANGE PASSWORD"
                            android:textColor="@color/mycolor3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:layout_rowWeight="1"
                    android:layout_margin="10dp"
                    android:padding="40dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/grad">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/ic_baseline_settings_24"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/dark2"></ImageView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SETTING"
                            android:textColor="@color/mycolor3"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>