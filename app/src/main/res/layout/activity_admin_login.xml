<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/gradient2"
    android:scrollbars="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:src="@drawable/admin1"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"></ImageView>

   <WebView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/welcomeasign"
    android:layout_marginTop="20dp"></WebView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="375dp"
        app:cardElevation="10dp"
        android:padding="100dp"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin LogIn"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/mycolor3"
        android:shadowColor="@color/mycolor4"
        android:shadowRadius="10"
        android:shadowDx="10"
        android:shadowDy="5"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Username"
        app:boxStrokeColor="@color/mycolor2"
style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:startIconDrawable="@drawable/ic_baseline_person_24"
        app:startIconTint="@color/mycolor3"
        app:endIconMode="clear_text">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtusername"></EditText>
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Password"
            app:boxStrokeColor="@color/mycolor2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_lock_24"
            app:startIconTint="@color/mycolor3"
            app:endIconMode="password_toggle">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtpassword"></EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/mycolor3"
            android:text="LogIn"
            android:textSize="15dp"
            android:id="@+id/btnadmin"></Button>
</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
    </ScrollView>
</LinearLayout>